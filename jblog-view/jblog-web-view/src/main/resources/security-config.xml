<!DOCTYPE mapping PUBLIC "//UNKNOWN/" "security-config.dtd">
<mapping>
  <action path="/login">
    <role name="guest" />
  </action>
  <action path="/logout">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/registration">
    <role name="guest" />
  </action>
  <action path="/articles">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/display-article">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/add-comment">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/add-article">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/vote">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/users">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/edit-article">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/activate-account">
    <role name="guest" />
  </action>
  <action path="/add-news">
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/add-hub">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/hubs">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <action path="/hub">
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </action>
  <other-actions>
    <role name="guest" />
    <role name="user" />
    <role name="moderator" />
    <role name="admin" />
  </other-actions>
</mapping>
